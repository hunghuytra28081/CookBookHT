<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="ingredientViewModel"
            type="com.example.cookbookht.ui.detailContent.detailIngredient.IngredientDetailViewModel" />

        <variable
            name="ingredientAdapter"
            type="com.example.cookbookht.ui.detailContent.detailIngredient.IngredientDetailAdapter" />

        <variable
            name="searchIngredientAdapter"
            type="com.example.cookbookht.ui.detailContent.detailIngredient.SearchIngredientAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_border_view_pager"
        android:padding="@dimen/_15sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewIngredient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:adapter="@{ingredientAdapter}"
            bind:data="@{ingredientViewModel.ingredient}"
            bind:listitem="@layout/item_ingredient" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSearchIngredient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:translationY="-1000dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardImage"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageIngredient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:background="@drawable/border_title_detail"
                    app:layout_constraintBottom_toBottomOf="@+id/cardImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardImage"
                    app:layout_constraintTop_toTopOf="@+id/cardImage">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/titleIngredient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:paddingStart="@dimen/_4sdp"
                        android:text="Apple"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSearchIngredient"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                app:layout_constraintBottom_toTopOf="@+id/closeSearchIngredient"
                bind:adapter="@{searchIngredientAdapter}"
                bind:data="@{ingredientViewModel.searchIngredient}"
                bind:isLoad="@{ingredientViewModel.isLoad}"
                bind:listitem="@layout/item_recipe_home"
                bind:onLoadMore="@{ingredientViewModel.onLoadData}" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutEmptySearchIngredient"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                app:layout_constraintBottom_toTopOf="@+id/closeSearchIngredient"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/_58sdp"
                android:visibility="gone"
                android:background="@color/color_white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_86sdp"
                    android:layout_height="@dimen/_86sdp"
                    android:src="@drawable/empty"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_found_this_ingredient"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:textColor="@color/black_grey_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/try_another_some_ingredient"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="#7D7F86" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closeSearchIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:src="@drawable/ic_close"/>
            <include
                android:id="@+id/progressLayoutContent"
                layout="@layout/loader_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/progressLayout"
            layout="@layout/loader_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>