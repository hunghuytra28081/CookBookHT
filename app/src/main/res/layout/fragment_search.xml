<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchAdapter"
            type="com.example.cookbookht.ui.home.HomeAdapter" />

        <variable
            name="historyAdapter"
            type="com.example.cookbookht.ui.search.HistoryAdapter" />

        <variable
            name="viewModel"
            type="com.example.cookbookht.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchFragment">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_search_view"
            android:paddingVertical="@dimen/_4sdp"
            app:iconifiedByDefault="false"
            app:layout_constraintDimensionRatio="15:2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:queryBackground="@color/transparent" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexLayoutHistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:maxLine="2"
            app:layout_constraintTop_toBottomOf="@+id/searchView">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_18sdp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                bind:adapter="@{historyAdapter}"
                tools:listitem="@layout/item_history" />
        </com.google.android.flexbox.FlexboxLayout>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flexLayoutHistory"
            bind:onRefresh="@{viewModel.onRefresh}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                bind:adapter="@{searchAdapter}"
                bind:data="@{viewModel.recipes}"
                bind:isLoad="@{viewModel.isLoad}"
                bind:onLoadMore="@{viewModel.onLoadData}"
                tools:listitem="@layout/item_recipe_home" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>